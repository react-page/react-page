{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "react": [
        "./node_modules/@types/react/index"
      ],
      "slate": [
        "./node_modules/@types/slate/index"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "src/**/__tests__/**/*.*"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../plugins/content/slate" }
  ]
}